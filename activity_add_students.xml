<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_margin="0dp"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".AddStudents">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/getvalue"
        android:src="@drawable/vote"/>

    <EditText
        android:id="@+id/stu_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/idcard2"
        android:hint="Roll No"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:maxLines="1"
        />

    <EditText
        android:id="@+id/stu_UserName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/avatar"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:hint="Student Name" />
    <EditText
        android:id="@+id/div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/avatar"
        android:hint="Division"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:maxLines="1"
        />
    <EditText
        android:id="@+id/code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/avatar"
        android:hint="Unique Code"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:maxLines="1"
        />

    <Button
        android:id="@+id/sign_up"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#42E6C4"
        android:textColor="#FFFFFF"
        android:hint="Add"
        />

    <TextView
        android:id="@+id/sing_in1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#32B5D5"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="2"
        android:text="BACK TO DASHBOARD"
        android:layout_marginBottom="120dp"
        android:textStyle="bold"
        />


</LinearLayout>

