<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_margin="0dp"
    android:gravity="center_vertical"

    tools:context=".Dashboard">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/board"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3">
        
        <Button
            android:id="@+id/btn3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_button"
            android:text="Result"
            android:padding="20dp"
            android:textSize="16dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="Clear Result"
            android:padding="20dp"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textStyle="bold"
            android:background="@drawable/round_button"
            android:text="Add New Student"
            android:textSize="16dp"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textStyle="bold"
            android:background="@drawable/round_button"
            android:text="See All Students List"
            android:textSize="16dp"
            />

  
        <Button
            android:id="@+id/btn4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textStyle="bold"
            android:background="@drawable/round_button"
            android:text="See Registered Students List"
            android:textSize="16dp"
            />

        <Button
            android:id="@+id/btn5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="Delete All Students"
            android:padding="20dp"
            android:textSize="16dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="Delete Registered Students"
            android:padding="20dp"
            android:textSize="16dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="Add Condidate Name"
            android:padding="20dp"
            android:textSize="16dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="Show all Condidate Name"
            android:padding="20dp"
            android:textSize="16dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="Delete Condidate Name"
            android:padding="20dp"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>